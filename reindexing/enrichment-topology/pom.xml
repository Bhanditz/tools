    <dependencies>
        <dependency>
            <version>1.0-SNAPSHOT</version>
            <groupId>eu.europeana.reindexing</groupId>
            <artifactId>enrichment-bolt</artifactId>
        </dependency>
        <dependency>
            <version>1.0-SNAPSHOT</version>
            <groupId>eu.europeana.reindexing</groupId>
